{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,
    "settings": {
        "color": {
            "palette": [
                {
                    "slug": "primary",
                    "color": "#0d6efd",
                    "name": "Primary"
                },
                {
                    "slug": "secondary",
                    "color": "#6c757d",
                    "name": "Secondary"
                },
                {
                    "slug": "success",
                    "color": "#198754",
                    "name": "Success"
                },
                {
                    "slug": "info",
                    "color": "#0dcaf0",
                    "name": "Info"
                },
                {
                    "slug": "warning",
                    "color": "#ffc107",
                    "name": "Warning"
                },
                {
                    "slug": "danger",
                    "color": "#dc3545",
                    "name": "Danger"
                },
                {
                    "slug": "light",
                    "color": "#f8f9fa",
                    "name": "Light"
                },
                {
                    "slug": "dark",
                    "color": "#212529",
                    "name": "Dark"
                },
                {
                    "slug": "background",
                    "color": "#ffffff",
                    "name": "Background"
                }
            ],
            "gradients": [
                {
                    "slug": "primary-to-secondary",
                    "gradient": "linear-gradient(135deg, #0d6efd 0%, #6c757d 100%)",
                    "name": "Primary to Secondary"
                },
                {
                    "slug": "primary-to-info",
                    "gradient": "linear-gradient(135deg, #0d6efd 0%, #0dcaf0 100%)",
                    "name": "Primary to Info"
                },
                {
                    "slug": "primary-to-success",
                    "gradient": "linear-gradient(135deg, #0d6efd 0%, #198754 100%)",
                    "name": "Primary to Success"
                }
            ],
            "duotone": [
                {
                    "colors": [ "#0d6efd", "#ffffff" ],
                    "slug": "primary-white",
                    "name": "Primary and White"
                },
                {
                    "colors": [ "#0d6efd", "#212529" ],
                    "slug": "primary-dark",
                    "name": "Primary and Dark"
                }
            ],
            "custom": true,
            "customDuotone": true,
            "customGradient": true,
            "defaultGradients": true,
            "defaultPalette": false,
            "link": true
        },
        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "Roboto, sans-serif",
                    "slug": "roboto",
                    "name": "Roboto"
                },
                {
                    "fontFamily": "Open Sans, sans-serif",
                    "slug": "open-sans",
                    "name": "Open Sans"
                },
                {
                    "fontFamily": "Montserrat, sans-serif",
                    "slug": "montserrat",
                    "name": "Montserrat"
                },
                {
                    "fontFamily": "Lato, sans-serif",
                    "slug": "lato",
                    "name": "Lato"
                },
                {
                    "fontFamily": "Poppins, sans-serif",
                    "slug": "poppins",
                    "name": "Poppins"
                }
            ],
            "fontSizes": [
                {
                    "slug": "small",
                    "size": "0.875rem",
                    "name": "Small"
                },
                {
                    "slug": "medium",
                    "size": "1rem",
                    "name": "Medium"
                },
                {
                    "slug": "large",
                    "size": "1.25rem",
                    "name": "Large"
                },
                {
                    "slug": "x-large",
                    "size": "1.5rem",
                    "name": "Extra Large"
                },
                {
                    "slug": "xx-large",
                    "size": "2rem",
                    "name": "XX Large"
                },
                {
                    "slug": "huge",
                    "size": "3rem",
                    "name": "Huge"
                }
            ],
            "customFontSize": true,
            "lineHeight": true,
            "dropCap": true,
            "fontStyle": true,
            "fontWeight": true,
            "letterSpacing": true,
            "textDecoration": true,
            "textTransform": true
        },
        "spacing": {
            "units": [ "px", "em", "rem", "vh", "vw", "%" ],
            "padding": true,
            "margin": true,
            "blockGap": true,
            "spacingSizes": [
                {
                    "slug": "20",
                    "size": "0.25rem",
                    "name": "Extra Small"
                },
                {
                    "slug": "30",
                    "size": "0.5rem",
                    "name": "Small"
                },
                {
                    "slug": "40",
                    "size": "1rem",
                    "name": "Medium"
                },
                {
                    "slug": "50",
                    "size": "1.5rem",
                    "name": "Large"
                },
                {
                    "slug": "60",
                    "size": "3rem",
                    "name": "Extra Large"
                },
                {
                    "slug": "70",
                    "size": "4.5rem",
                    "name": "XX Large"
                },
                {
                    "slug": "80",
                    "size": "6rem",
                    "name": "Huge"
                }
            ]
        },
        "border": {
            "color": true,
            "radius": true,
            "style": true,
            "width": true
        },
        "layout": {
            "contentSize": "800px",
            "wideSize": "1200px"
        },
        "custom": {
            "spacing": {
                "small": "1rem",
                "medium": "2rem",
                "large": "4rem"
            },
            "typography": {
                "line-height": {
                    "small": 1.2,
                    "medium": 1.5,
                    "large": 1.8
                }
            }
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--background)",
            "text": "var(--wp--preset--color--dark)"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--open-sans)",
            "fontSize": "var(--wp--preset--font-size--medium)",
            "lineHeight": "var(--wp--custom--typography--line-height--medium)"
        },
        "elements": {
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--primary)"
                },
                "css": "a:hover { color: var(--wp--preset--color--secondary); }"
            },
            "h1": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--montserrat)",
                    "fontSize": "var(--wp--preset--font-size--huge)",
                    "lineHeight": "var(--wp--custom--typography--line-height--small)",
                    "fontWeight": "700"
                }
            },
            "h2": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--montserrat)",
                    "fontSize": "var(--wp--preset--font-size--xx-large)",
                    "lineHeight": "var(--wp--custom--typography--line-height--small)",
                    "fontWeight": "700"
                }
            },
            "h3": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--montserrat)",
                    "fontSize": "var(--wp--preset--font-size--x-large)",
                    "lineHeight": "var(--wp--custom--typography--line-height--small)",
                    "fontWeight": "700"
                }
            },
            "h4": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--montserrat)",
                    "fontSize": "var(--wp--preset--font-size--large)",
                    "lineHeight": "var(--wp--custom--typography--line-height--small)",
                    "fontWeight": "700"
                }
            },
            "h5": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--montserrat)",
                    "fontSize": "var(--wp--preset--font-size--medium)",
                    "lineHeight": "var(--wp--custom--typography--line-height--small)",
                    "fontWeight": "700"
                }
            },
            "h6": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--montserrat)",
                    "fontSize": "var(--wp--preset--font-size--small)",
                    "lineHeight": "var(--wp--custom--typography--line-height--small)",
                    "fontWeight": "700"
                }
            },
            "button": {
                "typography": {
                    "fontWeight": "500"
                }
            }
        },
        "blocks": {
            "core/paragraph": {
                "spacing": {
                    "margin": {
                        "bottom": "var(--wp--custom--spacing--small)"
                    }
                }
            },
            "core/heading": {
                "spacing": {
                    "margin": {
                        "top": "var(--wp--custom--spacing--medium)",
                        "bottom": "var(--wp--custom--spacing--small)"
                    }
                }
            },
            "core/list": {
                "spacing": {
                    "margin": {
                        "bottom": "var(--wp--custom--spacing--small)"
                    }
                }
            },
            "core/quote": {
                "border": {
                    "width": "0 0 0 4px",
                    "style": "solid",
                    "color": "var(--wp--preset--color--primary)"
                },
                "spacing": {
                    "padding": {
                        "left": "var(--wp--custom--spacing--small)"
                    },
                    "margin": {
                        "bottom": "var(--wp--custom--spacing--medium)"
                    }
                },
                "typography": {
                    "fontStyle": "italic"
                }
            },
            "core/code": {
                "border": {
                    "radius": "4px"
                },
                "color": {
                    "background": "var(--wp--preset--color--light)",
                    "text": "var(--wp--preset--color--dark)"
                },
                "spacing": {
                    "padding": {
                        "top": "var(--wp--custom--spacing--small)",
                        "right": "var(--wp--custom--spacing--small)",
                        "bottom": "var(--wp--custom--spacing--small)",
                        "left": "var(--wp--custom--spacing--small)"
                    }
                },
                "typography": {
                    "fontFamily": "monospace"
                }
            },
            "core/button": {
                "border": {
                    "radius": "4px"
                },
                "color": {
                    "background": "var(--wp--preset--color--primary)",
                    "text": "var(--wp--preset--color--background)"
                },
                "css": ":where(.wp-block-button__link):hover { background-color: var(--wp--preset--color--secondary); color: var(--wp--preset--color--background); }"
            },
            "core/table": {
                "border": {
                    "color": "var(--wp--preset--color--light)"
                }
            },
            "core/image": {
                "spacing": {
                    "margin": {
                        "bottom": "var(--wp--custom--spacing--medium)"
                    }
                }
            },
            "core/columns": {
                "spacing": {
                    "margin": {
                        "bottom": "var(--wp--custom--spacing--medium)"
                    }
                }
            }
        }
    },
    "templateParts": [
        {
            "name": "header",
            "title": "Header",
            "area": "header"
        },
        {
            "name": "footer",
            "title": "Footer",
            "area": "footer"
        },
        {
            "name": "sidebar",
            "title": "Sidebar",
            "area": "sidebar"
        }
    ],
    "customTemplates": [
        {
            "name": "page-no-sidebar",
            "title": "Page (No Sidebar)",
            "postTypes": ["page"]
        },
        {
            "name": "page-full-width",
            "title": "Page (Full Width)",
            "postTypes": ["page"]
        },
        {
            "name": "single-no-sidebar",
            "title": "Single Post (No Sidebar)",
            "postTypes": ["post"]
        }
    ]
}
